{{#> layouts/main}}
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title text-primary">HÀNG XUỐNG</h5>
                    </div>
                    <div class="card-body">
                        <form id="cargoDownForm">
                            <!-- Basic Information -->
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Ngày tháng năm</label>
                                        <input type="date" class="form-control" id="date" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Tên tài xế</label>
                                        <input type="text" class="form-control" id="driverName" placeholder="Nhập tên tài xế">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Biển số xe</label>
                                        <input type="text" class="form-control" id="licensePlate" placeholder="XXX-XXXXX">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Loại Hàng Hóa</label>
                                        <input type="text" class="form-control" id="cargoType" placeholder="Đồng lạnh">
                                    </div>
                                </div>
                            </div>

                            <!-- Initial Costs -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h6 class="mb-3">Chi phí ban đầu</h6>
                                    <div class="form-group mb-3">
                                        <label class="form-label">Cước hàng hóa</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="cargoCost" placeholder="0">
                                            <span class="input-group-text">VND</span>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="form-label">Cước đi đường</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="travelCost" placeholder="0">
                                            <span class="input-group-text">VND</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Ghi chú</label>
                                        <textarea class="form-control" id="notes" rows="2" placeholder="Ghi chú ngắn"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <h6 class="mb-3">Cước phí</h6>
                                    <div class="form-group mb-3">
                                        <label class="form-label">Cước bốc hàng lên</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="loadingCost" placeholder="0">
                                            <span class="input-group-text">VND</span>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="form-label">Cước hạ hàng xuống</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="unloadingCost" placeholder="0">
                                            <span class="input-group-text">VND</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Cước tài xế</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="driverCost" placeholder="0">
                                            <span class="input-group-text">VND</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Fuel Costs -->
                            <div class="mb-4">
                                <h6 class="mb-3">Cước xăng dầu</h6>
                                <div class="table-responsive mb-2">
                                    <table class="table table-bordered" id="fuelCostsTable">
                                        <thead>
                                            <tr>
                                                <th>Địa điểm đổ</th>
                                                <th>Số tiền</th>
                                                <th style="text-align: center; width: 100px;">#</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <input type="text" class="form-control" placeholder="Địa chỉ đổ dầu/xăng">
                                                </td>
                                                <td>
                                                    <div class="input-group">
                                                        <input type="number" class="form-control" placeholder="0">
                                                        <span class="input-group-text">VND</span>
                                                    </div>
                                                </td>
                                                <td style="text-align: center;">
                                                    <button type="button" class="btn btn-danger btn-sm">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <button type="button" class="btn btn-primary btn-sm" id="addFuelCost">
                                    <i class="bx bx-plus"></i> Add
                                </button>
                            </div>

                            <!-- Additional Costs -->
                            <div class="mb-4">
                                <h6 class="mb-3">Chi phí phát sinh (Nếu có)</h6>
                                <div class="table-responsive mb-2">
                                    <table class="table table-bordered" id="additionalCostsTable">
                                        <thead>
                                            <tr>
                                                <th>Số tiền</th>
                                                <th>Lý do</th>
                                                <th style="text-align: center; width: 100px;">#</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="input-group">
                                                        <input type="number" class="form-control" placeholder="0">
                                                        <span class="input-group-text">VND</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" placeholder="Nhập lý do phát sinh">
                                                </td>
                                                <td style="text-align: center;">
                                                    <button type="button" class="btn btn-danger btn-sm">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <button type="button" class="btn btn-primary btn-sm" id="addAdditionalCost">
                                    <i class="bx bx-plus"></i> Add
                                </button>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Lưu lại</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript for dynamic rows -->
    <script>
        document.getElementById('addFuelCost').addEventListener('click', function() {
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>
                    <input type="text" class="form-control" placeholder="Địa chỉ đổ dầu/xăng">
                </td>
                <td>
                    <div class="input-group">
                        <input type="number" class="form-control" placeholder="0">
                        <span class="input-group-text">VND</span>
                    </div>
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="this.closest('tr').remove()">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
            `;
            document.querySelector('#fuelCostsTable tbody').appendChild(newRow);
        });

        document.getElementById('addAdditionalCost').addEventListener('click', function() {
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>
                    <div class="input-group">
                        <input type="number" class="form-control" placeholder="0">
                        <span class="input-group-text">VND</span>
                    </div>
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="Nhập lý do phát sinh">
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="this.closest('tr').remove()">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
            `;
            document.querySelector('#additionalCostsTable tbody').appendChild(newRow);
        });
    </script>
{{/layouts/main}} 
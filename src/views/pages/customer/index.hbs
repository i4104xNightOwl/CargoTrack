{{#> layouts/main}}
    <div class="flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">THÔNG TIN KHÁCH HÀNG</h5>
                        <div class="text-center mb-4">
                            <img src="https://i.pinimg.com/originals/86/b3/31/86b3315f71d8e1177f32d8007aa49ceb.gif" alt="Avatar" class="rounded-circle img-fluid">
                        </div>
                        <div class="">
                            <div class="form-group mb-4">
                                <label>Chọn khách hàng</label>
                                <select class="form-select" id="customerSelect">
                                    <option value="">Chọn tên khách hàng</option>
                                    {{#each customers}}
                                    <option value="{{this.id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group mb-4">
                                <label>Email</label>
                                <input type="email" class="form-control" id="email" readonly>
                            </div>
                            <div class="form-group mb-4">
                                <label>Số điện thoại</label>
                                <input type="text" class="form-control" id="phone" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">TRA CỨU KHÁCH HÀNG</h5>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Tổng đơn hàng</h5>
                                        <h2 class="card-text">0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-danger text-white">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Tổng chi phí</h5>
                                        <h2 class="card-text">0đ</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Đang vận chuyển</h5>
                                        <h2 class="card-text">0</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="table-responsive text-nowrap">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>MÃ ĐƠN HÀNG</th>
                                            <th>ĐỊA CHỈ GIAO</th>
                                            <th>TRẠNG THÁI</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-border-bottom-0">
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/layouts/main}} 
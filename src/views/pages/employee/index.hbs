{{#> layouts/main}}
    <div class="flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">THỎNG TIN NHÂN VIÊN</h5>
                        <div class="text-center mb-4">
                            <img src="https://i.pinimg.com/originals/86/b3/31/86b3315f71d8e1177f32d8007aa49ceb.gif" alt="Avatar" class="rounded-circle img-fluid">
                        </div>
                        <div class="">
                            <div class="form-group mb-4">
                                <label>Chọn nhân viên</label>
                                <select class="form-select" id="employeeSelect">
                                    <option value="">Chọn tên nhân viên</option>
                                    {{#each employees}}
                                    <option value="{{this.id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group mb-4">
                                <label>Ngày bắt đầu</label>
                                <input type="date" class="form-control" id="startDate">
                            </div>
                            <div class="form-group mb-4">
                                <label>Ngày kết thúc</label>
                                <input type="date" class="form-control" id="endDate">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">TRA CỨU NHÂN VIÊN</h5>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Tổng thu</h5>
                                        <h2 class="card-text">0đ</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-danger text-white">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Tổng chi</h5>
                                        <h2 class="card-text">0đ</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Chưa thanh toán</h5>
                                        <h2 class="card-text">0đ</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Employee Work History Table -->
                        <div class="card">
                            <div class="table-responsive text-nowrap">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>BIỂN SỐ</th>
                                            <th>SỐ TIỀN THU</th>
                                            <th>SỐ TIỀN CHI</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-border-bottom-0">
                                        {{#each workHistory}}
                                        <tr>
                                            <td>{{this.id}}</td>
                                            <td>{{this.licensePlate}}</td>
                                            <td>{{this.income}}</td>
                                            <td>{{this.expense}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/layouts/main}} 